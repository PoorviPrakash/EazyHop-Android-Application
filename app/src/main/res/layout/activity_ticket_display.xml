<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TicketDisplay">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"

        android:background="#f5dfdf"
        android:gravity="center">

        <RelativeLayout android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bus Number"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="120dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginLeft="210dp"
                android:id="@+id/busText"
                android:layout_marginTop="120dp"
                android:textSize="20dp"/>
        </RelativeLayout>
        <RelativeLayout android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:layout_marginTop="170dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="170dp"
                android:textSize="20dp"
                android:layout_marginLeft="210dp"
                android:id="@+id/dateText"/>
        </RelativeLayout>
        <RelativeLayout android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:layout_marginTop="220dp"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="220dp"
                android:textSize="20dp"
                android:layout_marginLeft="210dp"
                android:id="@+id/timeText"/>
        </RelativeLayout>
        <RelativeLayout android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Boarding Point"
                android:layout_marginTop="270dp"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="270dp"
                android:textSize="20dp"
                android:layout_marginLeft="210dp"
                android:id="@+id/boardText"/>
        </RelativeLayout>
        <RelativeLayout android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination Point"
                android:layout_marginTop="320dp"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="320dp"
                android:textSize="20dp"
                android:layout_marginLeft="210dp"
                android:id="@+id/destText"/>
        </RelativeLayout>

        <RelativeLayout android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No: of Passengers"
                android:layout_marginTop="400dp"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="400dp"
                android:textSize="20dp"
                android:layout_marginLeft="210dp"
                android:id="@+id/passText"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="420dp"
                android:textSize="20dp"
                android:text="----------------------------------------------------"/>
        </RelativeLayout>
        <RelativeLayout android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:layout_marginTop="470dp"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="470dp"
                android:textSize="20dp"
                android:layout_marginLeft="210dp"
                android:id="@+id/totalText"/>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>